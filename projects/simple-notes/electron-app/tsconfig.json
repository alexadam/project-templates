{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",                      
    "module": "commonjs",                 
    "allowJs": true,                      
    "outDir": "./dist/",                  
    "rootDir": "./",                      
    "removeComments": true,               
    "strict": true,                       
    "moduleResolution": "node",           
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,              
  },
}
